<% content_for(:title, t('defaults.board_lists')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= render 'search_form', url: boards_path, search: @search %>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @boards.any? %>
          <%= render @boards %>
        <% else %>
          <%= t('defaults.no_results') %>
        <% end %>
      </div>
    </div>
  </div>
  <%= paginate @boards %>
</div>
