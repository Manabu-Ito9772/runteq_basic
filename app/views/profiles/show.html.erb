<% content_for(:title, t('.profile')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.profile') %></h1>
      <%= link_to t('.edit'), profile_edit_path, class: 'btn btn-success' %>
      <h5><%= t('.email') %></h5>
      <%= current_user.email %>
      <h5><%= t('.name') %></h5>
      <%= current_user.decorate.full_name %>
      <h5><%= t('.avatar') %></h5>
      <%= image_tag(current_user.avatar.url, class: "rounded-circle mr15", size: "50x50") %>
    </div>
  </div>
</div>
